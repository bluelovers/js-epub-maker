<navPoint id="{{name}}" epub-type="{{epubType}}" lang="{{lang}}">
    <navLabel>
        <text>{{content.title}}</text>
    </navLabel>
    {{#if needPage}}
    <content src="{{name}}.html" title="{{content.title}}" epub-type="{{epubType}}" lang="{{lang}}" />
    {{/if}}
    {{#each subSections}} {{> sectionsNCXTemplate}} {{/each}}
</navPoint>
